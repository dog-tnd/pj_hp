  </main>

  <footer class="mt-24 border-t border-gray-200 py-8">
    <div class="mx-auto max-w-7xl px-4 text-center sm:px-6 lg:px-8">
      <p class="text-sm text-gray-500">© 2024 TND All Rights Reserved.</p>
    </div>
  </footer>

  <!-- 修正：スクリプト内での型注釈と null チェック -->
  <script>
    document.addEventListener('DOMContentLoaded', function() {
      // タブ要素を取得（必ず存在すると仮定）
      const webTab = document.querySelector('.web-tab') as HTMLElement;
      const designTab = document.querySelector('.design-tab') as HTMLElement;
      const dataTab = document.querySelector('.data-tab') as HTMLElement;
      const contents = document.querySelectorAll('.course-content');

      // タブを切り替える関数（引数に型注釈を追加）
      function activateTab(tabName: string) {
        // すべてのコンテンツを非表示にする
        contents.forEach(content => content.classList.add('hidden'));
        const content = document.getElementById(`${tabName}-content`);
        if (content) {
          content.classList.remove('hidden');
        }
      }

      // 各タブにクリックイベントリスナーを設定
      webTab.addEventListener('click', () => activateTab('web'));
      designTab.addEventListener('click', () => activateTab('design'));
      dataTab.addEventListener('click', () => activateTab('data'));

      // 初期表示はウェブ開発タブ
      activateTab('web');
    });
  </script>
</Layout>
